---
const navigation = [
  { name: '首页', href: '/' },
  { name: '关于我们', href: '/#about' },
  { name: '服务', href: '/#services' },
  { name: '产品', href: '/#products' },
  { name: '联系我们', href: '/#contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-slate-200 transition-all duration-200">
  <nav class="section-container">
    <div class="flex items-center justify-between h-16">
      <!-- Logo with Gradient -->
      <a
        href="/"
        class="relative group"
      >
        <span class="text-2xl font-extrabold bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent hover:opacity-90 transition-opacity" style="--tw-gradient-from: #486581; --tw-gradient-to: #2d3748;">
          深算科技
        </span>
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 group-hover:w-full transition-all duration-300" style="--tw-gradient-from: #486581; --tw-gradient-to: #2d3748;"></span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-1">
        {navigation.map((item) => (
          <li>
            <a
              href={item.href}
              class="relative px-4 py-2 text-slate-600 hover:text-primary-600 font-medium text-sm rounded-lg transition-all duration-200 hover:bg-primary-50 focus-ring"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden p-2.5 text-slate-600 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all duration-200 focus-ring"
        aria-label="打开菜单"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
