---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Copy, Check, ShieldAlert } from 'lucide-astro';
---

<Layout title="对公账户信息 - 长沙深算科技有限公司">
  <Header />

  <main class="min-h-screen py-20 relative">
    <!-- Background Gradient Blob -->
    <div class="absolute top-0 right-0 -translate-y-12 translate-x-12 w-96 h-96 bg-primary-200/30 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 translate-y-12 -translate-x-12 w-96 h-96 bg-secondary-200/30 rounded-full blur-3xl pointer-events-none"></div>

    <div class="section-container relative z-10">
      <div class="max-w-3xl mx-auto">
        <div class="mb-12 text-center">
          <h1 class="section-title-gradient">对公账户信息</h1>
          <p class="section-subtitle mx-auto">请妥善保管以下银行账户信息</p>
        </div>

        <div class="card max-w-3xl mx-auto hover:shadow-soft-lg transition-all duration-300">
          <div class="space-y-8">
            <!-- Account Name -->
            <div class="group">
              <div class="flex items-center justify-between mb-2">
                <p class="text-sm font-semibold tracking-wide text-slate-500 uppercase">户名</p>
                <button
                  class="copy-btn group/btn flex items-center gap-2 text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors"
                  data-text="长沙深算科技有限公司"
                >
                  <span class="btn-text">复制</span>
                  <Copy class="w-4 h-4 group-hover/btn:scale-110 transition-transform icon-copy" />
                  <Check class="w-4 h-4 text-green-500 hidden icon-check" />
                </button>
              </div>
              <p class="text-2xl md:text-3xl font-bold text-slate-900 border-b border-slate-100 pb-4 select-all">长沙深算科技有限公司</p>
            </div>

            <!-- Account Number -->
            <div class="group">
              <div class="flex items-center justify-between mb-2">
                <p class="text-sm font-semibold tracking-wide text-slate-500 uppercase">账号</p>
                <button
                  class="copy-btn group/btn flex items-center gap-2 text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors"
                  data-text="1901 0140 0920 0327 976"
                >
                  <span class="btn-text">复制</span>
                  <Copy class="w-4 h-4 group-hover/btn:scale-110 transition-transform icon-copy" />
                  <Check class="w-4 h-4 text-green-500 hidden icon-check" />
                </button>
              </div>
              <p class="text-2xl md:text-3xl font-bold text-slate-900 border-b border-slate-100 pb-4 select-all font-mono tracking-tight">1901 0140 0920 0327 976</p>
            </div>

            <!-- Bank Name -->
            <div class="group">
              <div class="flex items-center justify-between mb-2">
                <p class="text-sm font-semibold tracking-wide text-slate-500 uppercase">开户银行</p>
                <button
                  class="copy-btn group/btn flex items-center gap-2 text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors"
                  data-text="工行长沙全通支行"
                >
                  <span class="btn-text">复制</span>
                  <Copy class="w-4 h-4 group-hover/btn:scale-110 transition-transform icon-copy" />
                  <Check class="w-4 h-4 text-green-500 hidden icon-check" />
                </button>
              </div>
              <p class="text-2xl md:text-3xl font-bold text-slate-900 border-b border-slate-100 pb-4 select-all">工行长沙全通支行</p>
            </div>
          </div>

          <div class="mt-12 pt-8 border-t border-slate-100">
            <div class="flex items-start gap-4 p-4 rounded-xl bg-slate-50 border border-slate-100">
              <ShieldAlert class="w-6 h-6 flex-shrink-0 text-amber-500" />
              <p class="text-base text-slate-600 leading-relaxed">
                <strong class="text-slate-900">安全提醒：</strong><br/>
                此信息仅供业务往来使用。使用完毕请及时关闭页面，确保账户信息安全。
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // 添加复制功能
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const text = btn.getAttribute('data-text');
      const btnText = btn.querySelector('.btn-text');
      const iconCopy = btn.querySelector('.icon-copy');
      const iconCheck = btn.querySelector('.icon-check');
      
      try {
        await navigator.clipboard.writeText(text);
        
        // 更新 UI
        if (btnText) btnText.textContent = '已复制';
        if (iconCopy) iconCopy.classList.add('hidden');
        if (iconCheck) iconCheck.classList.remove('hidden');
        
        // 恢复 UI
        setTimeout(() => {
          if (btnText) btnText.textContent = '复制';
          if (iconCopy) iconCopy.classList.remove('hidden');
          if (iconCheck) iconCheck.classList.add('hidden');
        }, 2000);
      } catch (err) {
        console.error('复制失败:', err);
        alert('复制失败，请手动复制');
      }
    });
  });
</script>
